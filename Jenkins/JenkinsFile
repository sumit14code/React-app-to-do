pipeline{
    agent any

    tools{
        nodejs 'nodejs' // Check whether nodejs is installed or not in Tools
    }

    stages{
        stage('git checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/sumit14code/React-app-to-do.git'
            }
        }

        stage('Docker build and tag'){
            steps{
                sh "docker build -t sumit14code/react-to-do-application ."
            }
        }

        stage('Containerisation'){
            steps{
                sh '''
                docker stop c1
                docker rm c1
                docker run -it -d --name c1 -p 9000:80 sumit14code/react-to-do-application
                
                '''
            }
        }
    }
}


